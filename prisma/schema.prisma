generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Transaction {
  id          String          @id @default(uuid())
  value       Int
  category    String
  type        TransactionType
  description String
  Category    Category[]
}

model Category {
  id            String          @id @default(uuid())
  description   String
  type          TransactionType
  transaction   Transaction     @relation(fields: [transactionId], references: [id])
  transactionId String
}

enum TransactionType {
  INCOME
  EXPENSE
}
